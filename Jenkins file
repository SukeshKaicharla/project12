pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "hotstarimg"
        DOCKER_CONTAINER = "hotstarcont"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url:'https://github.com/SukeshKaicharla/java-project-maven-new.git'
            }
        }
      stages {
        stage('Clean package') {
            steps {
                    sh 'mvn clean install'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:latest ."
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Stop old container if running
                    sh "docker rm -f ${DOCKER_CONTAINER} || true"

                    // Run new container mapping port 8080 -> 80
                    sh "docker run -d --name ${DOCKER_CONTAINER} -p 8088:8080 ${DOCKER_IMAGE}:latest"
                }
            }
        }
    }
}
